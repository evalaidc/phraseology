<h1><%= @gathering.topic %></h1>
<h4>Date: <%= @gathering.date %></h4>
<h4>Location: <%= @gathering.location %></h4>
<h5>Event Created At: <%= @gathering.created_at %></h5>

<p><img src="<%= @language.photo_url %>"></p>
<p><%= @gathering.description %></p>


<p> <%= link_to "Edit Social Gathering", edit_language_gathering_path(@language, @gathering) if @gathering.user == current_user %></p>

<h3> Guest List </h3>
<% @users.each do |user| %>
  <h5> <%= user.email %> </h5>
<% end %>
