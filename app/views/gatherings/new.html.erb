<div class="formContainer">
  <%= link_to "Back", :back %>

<h1> Create a new Social Gathering </h1>

<%= form_for [@language, @gathering] do |f| %>

  <p>
    <%= f.label :topic %><br>
    <%= f.text_field :topic %>
  </p>

  <p>
    <%= f.label :photo_url %></br>
    <%= f.text_field :photo_url %>
  </p>

  <p>
    <%= f.label :location %></br>
    <%= f.text_field :location %>
  </p>

  <p>
    <%= f.label :"Start Time" %>
    <%= f.datetime_field :start_time %></br>
  </p>

    <p>
      <%= f.label :"End Time" %>
      <%= f.datetime_field :end_time %></br>
    </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>


  <%= f.submit %>

<% end %>
</div>
