<h1> Create a new Social Gathering </h1>

<%= form_for [@language, @gathering] do |f| %>

  <p>
    <%= f.label :topic %><br>
    <%= f.text_field :topic %>
  </p>

  <p>
    <%= f.label :photo_url %></br>
    <%= f.text_field :photo_url %>
  </p>

  <p>
    <%= f.label :location %></br>
    <%= f.text_field :location %>
  </p>

  <p>
    <%= f.label :date %></br>
    <%= f.text_field :date %>
  </p>

    <p>
      <%= f.label :time %></br>
      <%= f.text_field :time %>
    </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>


  <%= f.submit %>

<% end %>
